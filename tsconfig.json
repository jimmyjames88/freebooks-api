{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["./models/*"],
      "@controllers/*": ["./controllers/*"],
      "@config/*": ["./config/*"],
      "@database/*": ["./database/*"],
      "@middleware/*": ["./middleware/*"]
    }
  },
  "include": ["**/*.ts", "src/database/migrations/*.js"],

}